assign [class="Nautilus"] → "6: files"
assign [class="Remmina"] → "7: remote"

# configure xrandr for i3
exec --no-startup-id xrandr --output eDP-1 --primary --auto --output DVI-I-1-1 --auto --right-of eDP-1 --output DVI-I-2-2 --auto --right-of DVI-I-1-1

# put workspaces on specific screen
workspace $social output eDP-1
workspace $tools output eDP-1
workspace $data output eDP-1
workspace $terms output DVI-I-1-1
workspace $web output DVI-I-2-2
workspace $files output DVI-I-2-2
workspace $remote output DVI-I-2-2

# STATUSBAR
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# APPEARANCE
